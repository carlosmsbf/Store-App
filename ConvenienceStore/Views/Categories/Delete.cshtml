@model ConvenienceStore.Models.Category

@{
    ViewData["Title"] = "Delete";
}

<div class="d-flex justify-content-center">
    <div class="card d-block bg-dark text-white " style="width:600px; border-radius: 22px;">
        <h3 class="d-flex justify-content-center">Delete Category</h3>
    </div>

</div>

<hr />

<div class="card">
    <div class="card-header font-weight-bolder d-flex  justify-content-center"> Category Information</div>
    <div class="card-body">
        <div class="card-body row">

            <div class="form-group col-md">
                <label class="d-flex justify-content-center">
                    @Html.DisplayNameFor(model => model.Name)
                </label>
                <input class="form-control" style="border-radius: 22px;" disabled value="@Html.DisplayFor(model => model.Name)" />
            </div>

            <div class="form-group col-md">
                <label class="d-flex justify-content-center">
                    @Html.DisplayNameFor(model => model.Description)
                </label>
                <input class="form-control" style="border-radius: 22px;" disabled value="@Html.DisplayFor(model => model.Description)" />
            </div>
        </div>
    </div>
</div>

<hr/>

<div class="d-flex justify-content-center">
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" style="border-radius: 35px;" />

        <a asp-action="Index" class="btn btn-light" style="border-radius: 35px;">Back</a>
    </form>

</div>
