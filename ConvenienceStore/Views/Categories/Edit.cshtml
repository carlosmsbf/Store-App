@model ConvenienceStore.Models.Category

@{
    ViewData["Title"] = "Edit Category";
}

<div class="d-flex justify-content-center">
    <div class="card d-block bg-dark text-white " style="width:600px; border-radius: 22px;">
        <h3 class="d-flex justify-content-center">Edit Category</h3>
    </div>

</div>

<hr />



<form asp-action="Edit">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="Id" />

    <div class="card mt-3">
        <div class="card-header d-flex justify-content-center">Category Information</div>
        <div class="card-body">

            <div class="card-body row">

                <div class="form-group col-md">
                    <label asp-for="Name" class="control-label  d-flex justify-content-center"></label>
                    <input asp-for="Name" class="form-control  d-flex justify-content-center" style="border-radius: 22px;" />
                    <span asp-validation-for="Name" class="text-danger d-flex justify-content-center"></span>
                </div>

                <div class="form-group col-md">
                    <label asp-for="Description" class="control-label  d-flex justify-content-center"></label>
                    <input asp-for="Description" class="form-control  d-flex justify-content-center" style="border-radius: 22px;" />
                    <span asp-validation-for="Description" class="text-danger  d-flex justify-content-center"></span>
                </div>
            </div>

        </div>
    </div>

    <hr />

    <div class="form-group mt-3 d-flex justify-content-center">
        <input type="submit" value="Save" class="btn btn-primary" style="border-radius: 35px;" />
        <p> &ensp; </p>
        <a asp-action="Index" class="btn btn-light" style="border-radius: 35px;">Back</a>
    </div>
</form>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
