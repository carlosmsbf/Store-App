@model ConvenienceStore.Models.Inventory

@{
    ViewData["Title"] = "Inventory Details";
}

<div class="d-flex justify-content-center">
    <div class="card d-block bg-dark text-white " style="width:600px; border-radius: 22px;">
        <h3 class="d-flex justify-content-center">Product Details from Inventory</h3>
    </div>
</div>
<hr />

<div class="card mt-3">
    <div class="card-header font-weight-bolder d-flex justify-content-center"> Product Information</div>
    <div class="card-body">
        <div class="card-body row">
            <div class="form-group col-md">
                <label class="d-flex justify-content-center">
                    @Html.DisplayNameFor(model => model.Product.Category.Name)
                </label>
                <input class="form-control" style="border-radius: 22px;" disabled value="@Html.DisplayFor(model => model.Product.Category.Name)" />
            </div>

            <div class="form-group col-md">
                <label class="d-flex justify-content-center">
                    @Html.DisplayNameFor(model => model.Product.Name)
                </label>
                <input class="form-control" style="border-radius: 22px;" disabled value="@Html.DisplayFor(model => model.Product.Name)" />
            </div>
            <div class="form-group col-md">
                <label class="d-flex justify-content-center">
                    @Html.DisplayNameFor(model => model.Product.Brand)
                </label>
                <input class="form-control" style="border-radius: 22px;" disabled value="@Html.DisplayFor(model => model.Product.Brand.Name)" />
            </div>
        </div>
        <div class="form-group col-md">
            <label class="d-flex justify-content-center">
                @Html.DisplayNameFor(model => model.Product.Description)
            </label>
            <input class="form-control" style="border-radius: 22px;" disabled value="@Html.DisplayFor(model => model.Product.Description)" />
        </div>

    </div>
</div>

<div class="card mt-3">
    <div class="card-header font-weight-bolder d-flex justify-content-center"> Informação do Estoque</div>
    <div class="card-body">
        <div class="card-body row">

            <div class="form-group col-md">
                <label class="d-flex justify-content-center">
                    @Html.DisplayNameFor(model => model.Id)
                </label>
                <input class="form-control" style="border-radius: 22px;" disabled value="@Html.DisplayFor(model => model.Id)" />
            </div>

            <div class="form-group col-md">
                <label class="d-flex justify-content-center">
                    @Html.DisplayNameFor(model => model.Quantity)
                </label>
                <input class="form-control" style="border-radius: 22px;" disabled value="@Html.DisplayFor(model => model.Quantity)" />
            </div>


            <div class="form-group col-md">
                <label class="d-flex justify-content-center">
                    @Html.DisplayNameFor(model => model.Cost)
                </label>
                <input class="form-control" style="border-radius: 22px;" disabled value="@Html.DisplayFor(model => model.Cost)" />
            </div>

            <div class="form-group col-md">
                <label class="d-flex justify-content-center">
                    @Html.DisplayNameFor(model => model.Date)
                </label>
                <input class="form-control" style="border-radius: 22px;" disabled value="@Html.DisplayFor(model => model.Date)" />
            </div>



        </div>
    </div>
</div>

<hr/>

<div class="d-flex justify-content-center">
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary" style="border-radius: 35px;">Edit</a>
    <p>&ensp;</p>
    <a asp-action="Index" class="btn btn-light" style="border-radius: 35px;">Back</a>
</div>
