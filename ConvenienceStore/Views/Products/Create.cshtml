@model ConvenienceStore.Models.Product

@{
    ViewData["Title"] = "Create Product";
}

<div class="d-flex justify-content-center">
    <div class="card d-block bg-dark text-white" style="width:600px; border-radius: 22px;">
        <h3 class="d-flex justify-content-center">Create Product</h3>
    </div>
</div>

<hr />

<form asp-action="Create">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="card mt-3">
        <div class="card-header d-flex justify-content-center"> Product Information</div>
        <div class="card-body">


            <div class="card-body row">
                <div class="col-md">
                    <div class="form-group col-md">
                        <label asp-for="Name" for="floatingInputGrid" class="control-label d-flex justify-content-center"></label>
                        <input asp-for="Name" class="form-control" placeholder="Coca-Cola" style="border-radius: 22px;" />
                        <span asp-validation-for="Name" class="text-danger d-flex justify-content-center"></span>
                    </div>
                    <div class="form-group col-md">
                        <label asp-for="CategoryId" class="control-label d-flex justify-content-center"></label>
                        <select asp-for="CategoryId" class="form-control" size="5" aria-label="size 3 select example" asp-items="ViewBag.CategoryId"></select>
                    </div>
                </div>

                <div class="col-md">
                    <div class="form-group col-md">
                        <label asp-for="Description" class="control-label d-flex justify-content-center"></label>
                        <input asp-for="Description" class="form-control" style="border-radius: 22px;" />
                        <span asp-validation-for="Description" class="text-danger d-flex justify-content-center"></span>
                    </div>
                    <div class="form-group col-md">
                        <label asp-for="BrandId" class="control-label d-flex justify-content-center"></label>
                        <select asp-for="BrandId" class="form-control" size="5" aria-label="size 3 select example" asp-items="ViewBag.BrandId"></select>
                    </div>

                </div>
            </div>
        </div>
    </div>
    <hr />
    <div class="form-group mt-3 d-flex justify-content-center">
        <input type="submit" value="Create" class="btn btn-primary" style="border-radius: 35px;"/>
        <p>&ensp;</p>
        <a asp-action="Index" class="btn btn-light" style="border-radius: 35px;">Back</a>
    </div>


</form>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
