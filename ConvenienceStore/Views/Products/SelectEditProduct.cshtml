@model ConvenienceStore.Models.Product
<form asp-action="Edit" method="get">

    <div class="card">
        <div class="card-header font-weight-bolder d-flex  justify-content-center"> Product Information</div>
        <div class="card-body">
            <div class="card-body row">

                <div class="form-group col-md">
                    <label asp-for="Id" class="control-label d-flex justify-content-center"></label>
                    <select asp-for="Id" class="form-control" size="5" aria-label="size 3 select example" asp-items="ViewBag.ProductId"></select>
                </div>
            </div>
        </div>
    </div>

    <div class="form-group mt-3 d-flex justify-content-center">
        <input type="submit" value="Buscar" class="btn btn-primary" style="border-radius: 35px;" />
        <p>&ensp;</p>
        <a asp-action="Index" class="btn btn-light" style="border-radius: 35px;">Voltar</a>
    </div>

</form>