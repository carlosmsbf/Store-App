@model ConvenienceStore.Models.Sale

@{
    ViewData["Title"] = "Register a Sale";
}


<div class="d-flex justify-content-center">
    <div class="card d-block bg-dark text-white " style="width:600px; border-radius: 22px;">
        <h3 class="d-flex justify-content-center d-flex justify-content-center">Register a Sale</h3>
    </div>

</div>

<hr />

<form asp-action="Create">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="card mt-3 d-flex justify-content-center">
        <div class="card-header"> Product Information</div>
        <div class="card-body">


            <div class="card-body row">
                <div class="col-md">

                    <div class="form-group col-md">
                        <label asp-for="StoreId" class="control-label d-flex justify-content-center"></label>
                        <select asp-for="StoreId" class="form-control" size="4" aria-label="size 3 select example" asp-items="ViewBag.StoreId"></select>
                    </div>
                </div>
                <div class="col-md">
                    <div class="form-group col-md">
                        <label asp-for="Quantity" class="control-label d-flex justify-content-center"></label>
                        <input asp-for="Quantity" class="form-control" style="border-radius: 22px;" />
                        <span asp-validation-for="Quantity" class="text-danger d-flex justify-content-center"></span>
                    </div>
                    <div class="form-group col-md ">
                        <label asp-for="Date" class="control-label d-flex justify-content-center"></label>
                        <input asp-for="Date" class="form-control " style="border-radius: 22px;" />
                        <span asp-validation-for="Date" class="text-danger d-flex justify-content-center"></span>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <hr />

    <div class="form-group mt-3 d-flex justify-content-center">
        <input type="submit" value="Adicionar" class="btn btn-primary" style="border-radius: 35px;" />
        <p>&ensp;</p>
        <a asp-action="Index" class="btn btn-light" style="border-radius: 35px;">Voltar</a>
    </div>

</form>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
