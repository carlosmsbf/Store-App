@model IEnumerable<ConvenienceStore.Models.Store>

@{
    ViewData["Title"] = "Store";
}

<div class="d-flex justify-content-center mb-3">
    <div class="card d-block bg-dark text-white" style="width:600px; border-radius: 22px;">
        <h3 class="d-flex justify-content-center">Store</h3>
    </div>
</div>

<div class="d-flex justify-content-center ">
    <form asp-action="Index" method="post">

        <button type="submit" asp-route-id="1" class="btn btn-light" style="border-radius: 35px;">
            Filtrar
        </button>

        <button type="submit" asp-route-id="2" class="btn btn-light" style="border-radius: 35px;">
            Desfiltrar
        </button>


    </form>

</div>

    <div class="d-flex justify-content-center">
        <hr />
    </div>
    
        <table id="example" class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Id)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Inventory.Id)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Inventory.Product.Category.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Inventory.Product.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Inventory.Product.Brand.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Quantity)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Price)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Date)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Id)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Inventory.Id)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Inventory.Product.Category.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Inventory.Product.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Inventory.Product.Brand.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Quantity)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Price)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Date)
                        </td>
                        <td>
                            <div class="d-flex justify-content-end">
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn bg-primary" style="color: white; border-radius: 35px; ">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="25" height="25" fill="currentColor" class="bi bi-card-text" viewBox="0 0 16 16">
                                        <path d="M14.5 3a.5.5 0 0 1 .5.5v9a.5.5 0 0 1-.5.5h-13a.5.5 0 0 1-.5-.5v-9a.5.5 0 0 1 .5-.5h13zm-13-1A1.5 1.5 0 0 0 0 3.5v9A1.5 1.5 0 0 0 1.5 14h13a1.5 1.5 0 0 0 1.5-1.5v-9A1.5 1.5 0 0 0 14.5 2h-13z" />
                                        <path d="M3 5.5a.5.5 0 0 1 .5-.5h9a.5.5 0 0 1 0 1h-9a.5.5 0 0 1-.5-.5zM3 8a.5.5 0 0 1 .5-.5h9a.5.5 0 0 1 0 1h-9A.5.5 0 0 1 3 8zm0 2.5a.5.5 0 0 1 .5-.5h6a.5.5 0 0 1 0 1h-6a.5.5 0 0 1-.5-.5z" />
                                    </svg>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>

        </table>

<hr />





<p class="d-flex justify-content-lg-start">
    <a asp-action="Create" class="btn btn-primary" style="border-radius: 35px;">Add Product to Store</a>
</p>

@section Scripts {
    <script>
            //$(document).ready(function () {
            //    $('#myTable').DataTable();
            //});

            $(document).ready(function () {
                $('#example').DataTable();
            });
    </script>
}